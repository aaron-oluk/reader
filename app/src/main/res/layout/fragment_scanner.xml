<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Modern Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Bar with Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_bar_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/overlay_dark"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:minHeight="64dp">

                <!-- Close Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/close_scanner"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_close_white"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    android:contentDescription="Close" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Document Scanner"
                    android:textSize="22sp"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:letterSpacing="0.02" />

                <!-- Flash Toggle -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/flash_toggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_flash"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="@android:color/transparent"
                    app:iconTint="@color/text_white"
                    app:cornerRadius="20dp"
                    android:contentDescription="Flash" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Scan Frame Area -->
        <FrameLayout
            android:id="@+id/scan_frame_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="32dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar_card"
            app:layout_constraintBottom_toTopOf="@id/bottom_controls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Scan Frame with Animated Corners -->
            <FrameLayout
                android:id="@+id/scan_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <!-- Corner Brackets - Top Left -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/corner_bracket_top_left" />

                <!-- Corner Brackets - Top Right -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/corner_bracket_top_right" />

                <!-- Corner Brackets - Bottom Left -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|start"
                    android:background="@drawable/corner_bracket_bottom_left" />

                <!-- Corner Brackets - Bottom Right -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/corner_bracket_bottom_right" />

                <!-- Scanning Guide Lines -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/scan_guide_line" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/scan_guide_line" />
            </FrameLayout>

            <!-- Instruction Text -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/overlay_dark"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/instruction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Align document within frame"
                    android:textSize="14sp"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:padding="14dp"
                    android:drawableStart="@drawable/ic_scan"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Bottom Controls -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/overlay_dark"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="32dp">

                <!-- Mode Tabs with Modern Design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/tab_container_background"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/scan_quote_tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scan Quote"
                        android:textSize="15sp"
                        android:textColor="@color/primary_blue"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:gravity="center"
                        android:background="@drawable/tab_selected_modern"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/scan_page_tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scan Page"
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:padding="14dp"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/sign_tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sign"
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:padding="14dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Capture Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- Gallery Button -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/gallery_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="40dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/background_white"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/primary_blue_light">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/gallery_thumbnail"
                            android:scaleType="centerCrop"
                            android:contentDescription="Gallery" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Capture Button -->
                    <FrameLayout
                        android:id="@+id/capture_button"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:background="@drawable/capture_button_modern">

                        <!-- Outer Ring -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/capture_button_ring" />

                        <!-- Inner Circle -->
                        <View
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:background="@drawable/capture_button_circle" />

                        <!-- Capture Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_scan"
                            android:tint="@color/text_white" />
                    </FrameLayout>

                    <!-- Settings Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/settings_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="40dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="24dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:backgroundTint="@color/background_white"
                        app:iconTint="@color/primary_blue"
                        app:cornerRadius="28dp"
                        app:elevation="4dp"
                        android:contentDescription="Settings" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
