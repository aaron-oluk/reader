<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            android:minHeight="64dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Close Button (Blue X) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_scanner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_close_white"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:backgroundTint="@android:color/transparent"
                app:iconTint="@color/primary_blue"
                app:cornerRadius="20dp"
                android:contentDescription="Close" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Document Scanner"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="serif" />

            <!-- Flash Toggle (Blue Lightning) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/flash_toggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_flash"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:backgroundTint="@android:color/transparent"
                app:iconTint="@color/primary_blue"
                app:cornerRadius="20dp"
                android:contentDescription="Flash" />
        </LinearLayout>

        <!-- Scan Frame Area -->
        <FrameLayout
            android:id="@+id/scan_frame_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="32dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toTopOf="@id/instruction_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Scan Frame with Corner Brackets -->
            <FrameLayout
                android:id="@+id/scan_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <!-- Corner Brackets - Top Left -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/corner_bracket_top_left" />

                <!-- Corner Brackets - Top Right -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/corner_bracket_top_right" />

                <!-- Corner Brackets - Bottom Left -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|start"
                    android:background="@drawable/corner_bracket_bottom_left" />

                <!-- Corner Brackets - Bottom Right -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/corner_bracket_bottom_right" />

                <!-- Detected Content Overlays (Semi-transparent blue rectangles) -->
                <View
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/detected_content_overlay" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/detected_content_overlay" />
            </FrameLayout>
        </FrameLayout>

        <!-- Instruction Banner with Blue Corners -->
        <FrameLayout
            android:id="@+id/instruction_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_controls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Black Banner Background -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/instruction_banner_background"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- Blue Corner - Left -->
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="start|center_vertical"
                android:background="@drawable/corner_bracket_left" />

            <!-- Blue Corner - Right -->
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/corner_bracket_right" />

            <!-- Instruction Text -->
            <TextView
                android:id="@+id/instruction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALIGN THE PAGE WITHIN THE FRAME"
                android:textSize="12sp"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </FrameLayout>

        <!-- Bottom Controls (White Background) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_white"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="32dp">

                <!-- Mode Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/tab_container_background"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/scan_quote_tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scan Quote"
                        android:textSize="14sp"
                        android:textColor="@color/primary_blue"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:gravity="center"
                        android:background="@drawable/tab_selected_modern"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/scan_page_tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scan Page"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:padding="12dp"
                        android:gravity="center"
                        android:background="@color/background_light_gray"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/sign_tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sign"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:padding="12dp"
                        android:gravity="center"
                        android:background="@color/background_light_gray" />
                </LinearLayout>

                <!-- Captured Images Counter -->
                <LinearLayout
                    android:id="@+id/captured_images_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">
                    
                    <TextView
                        android:id="@+id/captured_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 images captured"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginEnd="16dp" />
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_pdf_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save PDF"
                        android:textSize="14sp"
                        android:enabled="false"
                        app:backgroundTint="@color/primary_blue"
                        app:cornerRadius="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />
                </LinearLayout>

                <!-- Capture Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- Gallery Button (Beige/Textured Thumbnail) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/gallery_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="40dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F5E6D3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/gallery_thumbnail"
                            android:scaleType="centerCrop"
                            android:contentDescription="Gallery" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Capture Button -->
                    <FrameLayout
                        android:id="@+id/capture_button"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:background="@drawable/capture_button_modern">

                        <!-- Outer Ring -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/capture_button_ring" />

                        <!-- Inner Circle -->
                        <View
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:background="@drawable/capture_button_circle" />
                    </FrameLayout>

                    <!-- Settings Button (Grid Icon) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/settings_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="40dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_grid"
                            android:scaleType="centerInside"
                            android:padding="12dp"
                            android:tint="@color/primary_blue"
                            android:contentDescription="Settings" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
