<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light_gray">

    <!-- Header with Book Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_white"
        android:padding="20dp">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="end"
            android:contentDescription="Close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE SESSION"
            android:textSize="12sp"
            android:textColor="@color/primary_blue"
            android:letterSpacing="0.1"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/session_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Great Gatsby"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/session_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F. Scott Fitzgerald"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Timer Circle -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="32dp">

                <View
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_outline" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/timer_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="56sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOURS"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="56sp"
                        android:textColor="@color/text_tertiary"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp">

                        <TextView
                            android:id="@+id/timer_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:textSize="56sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MINUTES"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="56sp"
                        android:textColor="@color/text_tertiary"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/timer_seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="56sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SECONDS"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:letterSpacing="0.1" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Current Page Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/background_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bookmark"
                            android:contentDescription="Bookmark" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CURRENT PAGE"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:letterSpacing="0.05"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:id="@+id/target_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TARGET: 350"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/current_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="142"
                            android:textSize="56sp"
                            android:textColor="@color/primary_blue"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_pages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / 350"
                            android:textSize="32sp"
                            android:textColor="@color/text_tertiary"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Capture Thought Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/background_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_note"
                            android:contentDescription="Note" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CAPTURE A THOUGHT"
                            android:textSize="12sp"
                            android:textColor="@color/primary_blue"
                            android:letterSpacing="0.05"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/thought_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Note a quote or an observation..."
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_tertiary"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/background_white">

        <Button
            android:id="@+id/pause_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="⏸  Pause"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_outline"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/end_session_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="✓  End Session"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_blue"
            app:cornerRadius="28dp" />
    </LinearLayout>
</LinearLayout>
