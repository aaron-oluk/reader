<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reader_background_light">

    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/pagesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="60dp"
                android:paddingBottom="100dp"
                android:paddingHorizontal="8dp" />

        </ScrollView>

        <!-- Floating Page Indicator -->
        <TextView
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="120dp"
            android:background="@drawable/page_indicator_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Page 1 of 10"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <LinearLayout
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:background="@color/reader_toolbar_background">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                app:tint="@color/reader_text_primary"
                android:contentDescription="Back" />

            <!-- Title -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Title"
                    android:textSize="16sp"
                    android:textColor="@color/reader_text_primary"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/toolbar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Page 1 of 10"
                    android:textSize="12sp"
                    android:textColor="@color/reader_text_secondary" />
            </LinearLayout>

            <!-- Bookmark Button -->
            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_bookmark"
                app:tint="@color/reader_text_primary"
                android:contentDescription="Bookmark" />

            <!-- Share Button -->
            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share"
                app:tint="@color/reader_text_primary"
                android:contentDescription="Share" />

            <!-- More Options -->
            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                app:tint="@color/reader_text_primary"
                android:contentDescription="Settings" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Bottom Control Panel -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/reader_bottom_sheet_background"
        android:elevation="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="20dp">

        <!-- Page Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/current_page_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:gravity="center" />

            <SeekBar
                android:id="@+id/page_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/slider_track"
                android:thumb="@drawable/slider_thumb"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/total_pages_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />
        </LinearLayout>

        <!-- Control Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Table of Contents -->
            <LinearLayout
                android:id="@+id/btn_toc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_toc"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Contents" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contents"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Brightness -->
            <LinearLayout
                android:id="@+id/btn_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_brightness"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Brightness" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brightness"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Theme Toggle -->
            <LinearLayout
                android:id="@+id/btn_theme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/theme_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_night_mode"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Theme" />

                <TextView
                    android:id="@+id/theme_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Text Size -->
            <LinearLayout
                android:id="@+id/btn_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_text_size"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Text Size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Search -->
            <LinearLayout
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Theme Selection Row (Hidden by default) -->
        <LinearLayout
            android:id="@+id/theme_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <!-- Light Theme -->
            <LinearLayout
                android:id="@+id/theme_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/theme_button_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Sepia Theme -->
            <LinearLayout
                android:id="@+id/theme_sepia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginHorizontal="24dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/theme_button_sepia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sepia"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Dark Theme -->
            <LinearLayout
                android:id="@+id/theme_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/theme_button_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Brightness Slider (Hidden by default) -->
        <LinearLayout
            android:id="@+id/brightness_slider_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_brightness"
                app:tint="@color/text_tertiary"
                android:contentDescription="Min Brightness" />

            <SeekBar
                android:id="@+id/brightness_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/slider_track"
                android:thumb="@drawable/slider_thumb"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_brightness"
                app:tint="@color/text_primary"
                android:contentDescription="Max Brightness" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
