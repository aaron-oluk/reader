<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography Scale - Material Design 3 -->
    
    <!-- Display -->
    <style name="TextAppearance.App.DisplayLarge" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textSize">57sp</item>
        <item name="android:lineHeight">64sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.DisplayMedium" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight">52sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.DisplaySmall" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">44sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Headline -->
    <style name="TextAppearance.App.HeadlineLarge" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.HeadlineMedium" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.HeadlineSmall" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Title -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Body -->
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.03333</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Label -->
    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.App.LabelMedium" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.04167</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.LabelSmall" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.04545</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
